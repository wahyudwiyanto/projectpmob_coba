<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="303dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="84dp"
        app:srcCompat="@drawable/logo2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Welcome To FitnesTracker"
        android:textAlignment="center"
        android:layout_marginBottom="12sp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/grey"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplikasi ini bisa memantau hasil olahraga,
        menghitung kalori yang terbakar, dan mengestimasi langkah
yang Anda jalan. Anda juga bisa menghubungkannya dengan perangkat
Android Wear."
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginBottom="57dp"
        android:textColor="@color/grey"/>

    <Button
        android:id="@+id/button10"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="9dp"
        android:background="@drawable/selector"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="19dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button9"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="9dp"
        android:background="@drawable/background_orange_smoth"
        android:text="Register"
        android:textColor="@color/orange"
        android:textSize="19dp"
        android:textStyle="bold" />



</LinearLayout>