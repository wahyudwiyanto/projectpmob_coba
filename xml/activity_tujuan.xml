<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".goalfitnes">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="33dp"
        android:text="  Apa tujuanmu?"
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="13dp"
        android:background="@drawable/greywithorange"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:background="@drawable/outline_white"
                android:padding="20dp"
                android:textSize="15dp"
                android:textColor="@color/whitesusu"
                android:text="Membentuk Otot"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:background="@drawable/outline_white"
                android:padding="20dp"
                android:textSize="15dp"
                android:textColor="@color/whitesusu"
                android:text="Menurunkan Berat badan"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sedikit keringat akan sangat membantu. Olahraga membuat jantungmu tetap sehat dan otot-ototmu kuat serta membantu menurunkan berat badan"
                android:layout_marginTop="20dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="19dp"/>

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="286dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/vectortujuan1" />

        </LinearLayout>
    </LinearLayout>







</LinearLayout>