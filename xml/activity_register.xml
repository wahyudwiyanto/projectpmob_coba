<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="303dp"
        android:layout_marginTop="65dp"
        app:srcCompat="@drawable/vector2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar akun anda"
        android:textAlignment="center"
        android:layout_marginBottom="20sp"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="@color/grey"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="23dp"
        android:layout_marginStart="23dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/background_orange_smoth"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:hint="Nama"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="23dp"
        android:layout_marginStart="23dp"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/background_orange_smoth"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:hint="Email"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginEnd="23dp"
            android:layout_marginStart="23dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/passwordEditTextregis"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/background_orange_smoth"
                android:hint="Password"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/showPasswordIconregis"
            android:layout_width="87dp"
            android:layout_height="51dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:contentDescription="Show Password"
            android:padding="14dp"
            android:src="@drawable/hide" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginEnd="23dp"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/background_orange_smoth"
                android:gravity="center"
                android:hint="Ulangi Password"
                android:inputType="textPassword"
                android:textSize="20dp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/showPasswordIcon"
            android:layout_width="87dp"
            android:layout_height="51dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:contentDescription="Show Password"
            android:padding="14dp"
            android:src="@drawable/hide" />
    </RelativeLayout>
    <Button
        android:id="@+id/button13"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="9dp"
        android:background="@drawable/selector"
        android:text="Registrasi"
        android:textColor="@color/white"
        android:textSize="19dp"
        android:textStyle="bold" />
</LinearLayout>