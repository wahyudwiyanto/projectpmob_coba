<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna latar belakang tombol -->
    <solid android:color="#6200EE" /> <!-- Ganti dengan warna yang diinginkan -->

    <!-- Radius sudut tombol -->
    <corners android:radius="16dp" /> <!-- Ganti angka sesuai kebutuhan untuk membuat sudut lebih melengkung atau tajam -->

    <!-- Garis tepi tombol (optional) -->
    <stroke
        android:width="2dp"
        android:color="#BB86FC"/> <!-- Warna garis tepi -->

    <!-- Padding dalam tombol (optional) -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp" />
</shape>
