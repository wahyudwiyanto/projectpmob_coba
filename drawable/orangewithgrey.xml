<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lapisan untuk border oranye -->
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="50dp" android:bottomRightRadius="50dp"/>
            <solid android:color="#424242" /> <!-- Warna oranye -->
        </shape>
    </item>

    <!-- Lapisan untuk latar abu-abu -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="16dp">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="50dp" android:bottomRightRadius="50dp"/>
            <solid android:color="#FF5722" /> <!-- Warna abu-abu gelap -->
        </shape>
    </item>

</layer-list>
